<aside class="branding">
  {% if site_logo %}
    <div class="branding__site-logo">
      <a href="{{ url }}" title="{{ 'Home'|t }}" rel="home">
        <img src="{{ site_logo }}" alt="{{ 'Home'|t }}"/>
      </a>
    </div>
  {% endif %}

  {% if site_title %}
    <h2 class="branding__site-title">
      <a href="{{ path('<front>') }}" title="{{ 'Home'|t }}" rel="home">{{ site_title }}</a>
    </h2>
  {% endif %}

  {% if site_slogan %}
    <h4 class="branding__site-slogan">{{ site_slogan }}</h4>
  {% endif %}
</aside>

